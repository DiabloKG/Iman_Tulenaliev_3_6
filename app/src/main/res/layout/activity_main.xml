<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/image_view_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_messi"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messi"
            android:textColor="@color/white"
            android:paddingVertical="35dp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/red"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_ramires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramires"
            android:textColor="@color/white"
            android:paddingVertical="35dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/button_design" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_benzema"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benzema"
            android:textColor="@color/black"
            android:paddingVertical="35dp"
            android:backgroundTint="@color/yellow"
            android:background="@drawable/button_design" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_neymar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neymar"
            android:textColor="@color/white"
            android:paddingVertical="35dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/button_design" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_pirlo"
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pirlo"
        android:textColor="@color/white"
        android:paddingVertical="35dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/orange"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ibragimovic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IbrahimoviÄ‡"
        android:paddingHorizontal="5dp"
        android:textColor="@color/white"
        android:paddingVertical="35dp"
        android:backgroundTint="@color/dark_green"
        android:background="@drawable/button_design" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_bale"
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bale"
        android:textColor="@color/white"
        android:paddingVertical="35dp"
        android:backgroundTint="@color/purple"
        android:background="@drawable/button_design" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_casillas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casillas"
        android:textColor="@color/white"
        android:paddingVertical="35dp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/button_design" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>